<h1>Gêneros</h1>
<%= link_to "Criar novo gênero", new_genre_path%>
<ul>
    <% @genres.each do |genre|%>
        <li>
            <%= link_to genre.name, genre_path(genre)%> 
            <%= link_to "editar", edit_genre_path(genre)%>
            <%= link_to "deletar", genre_path(genre), data: {turbo_method: :delete}%>
        </li>
    <% end%>
</ul>